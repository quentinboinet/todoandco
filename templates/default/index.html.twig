{% extends 'base.html.twig' %}

{% block header_title %}
    <h2 class="text-center">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h2>
{% endblock %}

{% block body %}

    <div class="row text-center">
        <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_archive') }}" class="btn btn-warning">Consulter la liste des tâches terminées</a>
    </div>
{% endblock %}
